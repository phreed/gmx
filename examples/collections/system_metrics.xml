<!-- System Metrics Collection Example
     This demonstrates a collection structure for real-time system performance metrics
     CUID: system_metrics
     Used with: dashboard.xml layout DataGrid component
-->
<ISISCollection cuid="system_metrics">

    <RuidList>
        <!-- CPU Usage Metric -->
        <Ruid ruid="metric_cpu_usage" select="first"/>

        <!-- Memory Usage Metric -->
        <Ruid ruid="metric_memory_usage" select="last"/>

        <!-- Disk I/O Metric -->
        <Ruid ruid="metric_disk_io" select="last"/>

        <!-- Network Throughput Metric -->
        <Ruid ruid="metric_network_throughput" select="last"/>

        <!-- Database Connections Metric -->
        <Ruid ruid="metric_db_connections" select="last"/>

        <!-- Active Users Metric -->
        <Ruid ruid="metric_active_users" select="last"/>

        <!-- Response Time Metric -->
        <Ruid ruid="metric_response_time" select="last"/>

        <!-- Error Rate Metric -->
        <Ruid ruid="metric_error_rate" select="last"/>

        <!-- Cache Hit Rate Metric -->
        <Ruid ruid="metric_cache_hit_rate" select="last"/>

        <!-- Queue Length Metric -->
        <Ruid ruid="metric_queue_length" select="last"/>

        <!-- Temperature Metric -->
        <Ruid ruid="metric_temperature" select="last"/>

        <!-- Power Consumption Metric -->
        <Ruid ruid="metric_power_consumption" select="last"/>
    </RuidList>

</ISISCollection>

